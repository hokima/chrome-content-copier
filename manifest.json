{
  "manifest_version": 3,
  "name": "Content Copier without Ads",
  "version": "1.1",
  "description": "תוסף להעתקת תוכן מאתרים ללא פרסומות, סרטונים ותמונות",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}