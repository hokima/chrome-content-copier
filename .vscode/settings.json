{
    "javascript.validate.enable": false,
    "typescript.validate.enable": false,
    "eslint.validate": ["javascript"],
    "files.exclude": {
      "**/*.js.map": true,
      "**/*.js": {"when": "$(basename).ts"},
      "**/node_modules": true
    },
    "search.exclude": {
      "**/node_modules": true,
      "**/bower_components": true
    },
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    }
  }